<div class="card" {{did-insert this.initEventListiner}} {{did-update this.initEventListiner @chat}} {{will-destroy
    this.removeEventListiner}}>
    <div class="card-body">
        <h5 class="card-title">{{@chat.nome}}</h5>
        <ul class="list-unstyled chat chat-message-list">
            {{#each this.chatMessages as |message|}}
            <Home::Chat::Message @message={{message}} />
            {{/each}}
        </ul>
        <div>
            <div class="form-group bg-white">
                <Textarea class="form-control pl-2 my-0" id="exampleFormControlTextarea2" rows="3"
                    @value={{this.textMessage}} placeholder="digite sua mensagem"></Textarea>
            </div>
            <button type="button" class="btn btn-primary btn-rounded mt-1 float-end" onclick={{perform
                this.sendMessage}}>Enviar</button>
        </div>
    </div>
</div>